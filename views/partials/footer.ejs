<footer class="bg-dark-800 border-t border-white/10 mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            
            <!-- Brand -->
            <div class="md:col-span-1">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-r from-primary-500 to-primary-600 flex items-center justify-center font-display font-bold">
                        <%= site.name.charAt(0) %>
                    </div>
                    <span class="font-display font-bold text-lg"><%= site.name %></span>
                </div>
                <p class="text-gray-400 text-sm">
                    <%= site.tagline %>
                </p>
            </div>
            
            <!-- Quick Links -->
            <div>
                <h3 class="font-semibold mb-4">Quick Links</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/about" class="text-gray-400 hover:text-primary-500 transition-colors">About Me</a></li>
                    <li><a href="/portfolio" class="text-gray-400 hover:text-primary-500 transition-colors">Portfolio</a></li>
                    <li><a href="/booking" class="text-gray-400 hover:text-primary-500 transition-colors">Booking</a></li>
                    <li><a href="/platforms" class="text-gray-400 hover:text-primary-500 transition-colors">Platforms</a></li>
                </ul>
            </div>
            
            <!-- Support -->
            <div>
                <h3 class="font-semibold mb-4">Support</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="/faq" class="text-gray-400 hover:text-primary-500 transition-colors">FAQ</a></li>
                    <li><a href="/contact" class="text-gray-400 hover:text-primary-500 transition-colors">Contact</a></li>
                    <li><a href="/testimonials" class="text-gray-400 hover:text-primary-500 transition-colors">Testimonials</a></li>
                </ul>
            </div>
            
            <!-- Newsletter -->
            <div>
                <h3 class="font-semibold mb-4">Stay Updated</h3>
                <p class="text-gray-400 text-sm mb-4">Get exclusive content drops & promotions</p>
                <form id="newsletterForm" class="space-y-2">
                    <input 
                        type="email" 
                        name="email" 
                        placeholder="Your email" 
                        class="w-full bg-dark-700 border border-white/10 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500"
                        required
                    >
                    <button type="submit" class="btn-primary w-full text-sm py-2">Subscribe</button>
                </form>
                <p id="newsletterMessage" class="text-sm mt-2"></p>
            </div>
            
        </div>
        
        <!-- Social Links -->
        <div class="flex justify-center space-x-6 mb-8 pb-8 border-b border-white/10">
            <% if (social.instagram) { %>
            <a href="<%= social.instagram %>" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary-500 transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
